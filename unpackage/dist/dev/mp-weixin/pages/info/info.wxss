/* 水平间距 */
.box {
  display: flex;
  flex-direction: row;
}
.button {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  flex: 1;
  height: 35px;
  margin: 0 5px;
  border-radius: 5px;
}
.button-text {
  color: #fff;
  font-size: 12px;
}
.gradebody {
  width: 700rpx;
  height: 800rpx;
  background-color: #fff;
}
.popup-title {
  background-color: #fff;
  margin: 0 auto;
  padding: 30rpx;
  width: 700rpx;
  border-bottom: 1px solid #dedede;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}