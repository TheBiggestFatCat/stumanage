page {
  font-size: 14px;
  padding: 40rpx;
  box-sizing: border-box;
  background-image: url("https://mp-a0b6177b-d49d-4c50-a9cf-fdec731bc83a.cdn.bspapp.com/cloudstorage/2f29a7b2-7bd6-4ad7-a6cb-d83a1813abe6.png");
